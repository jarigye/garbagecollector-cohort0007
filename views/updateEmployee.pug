extends layout
block content
    header.card-header
        h4.card-title Welcome
    div.form-row
        div.col.form-group.col-md-12   
            div.form-row
                div.col-md-10
                    p Here is your information #{user.firstname}
    div.form-row
        img(src='/'+user.imageupload width="150px" height="170px")
    form(method="post" action="/employee/update?id="+user._id)
        table.table
            thead.thead-dark
                tr
                    th Firstname
                    td 
                        input.form-control(value = user.firstname name ="firstname")
                tr
                    th Lastname
                    td 
                        input.form-control(value = user.lastname name ="lastname")
                tr
                    th NIN
                    td 
                        input.form-control(value = user.nin name ="nin")
                tr
                    th Gender
                        td 
                            label Male&nbsp
                            input(value= "male" type="radio" checked = user.gender==="male" name="gender") 
                            label &nbspFemale&nbsp
                            input(value= "female" type="radio" checked = user.gender==="female" name="gender")
                tr
                    th Past incidence 
                    td 
                        label accidents&nbsp 
                        input(value= "accidents" type="checkbox" checked =user.pastincidence.includes('accidents') name="pastincidence")
                        label &nbspfights&nbsp
                        input(value= "fights" type="checkbox" checked =user.pastincidence.includes('fights') name="pastincidence")
                        label &nbspfuel thefts&nbsp
                        input(value= "fuel thefts" type="checkbox" checked =user.pastincidence.includes('fuel thefts') name="pastincidence")
                tr
                tr
                    th Role
                    td 
                        select.form-control(name="role")  
                            option(value="driver" selected = user.role === "driver") Driver
                            option(value="conductor" selected = user.role === "conductor") Conductor
                tr
                    td(colspan=2)
                        button.btn.btn-dark.btn-block(type="submit") Update
